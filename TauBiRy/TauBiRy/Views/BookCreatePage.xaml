<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TauBiRy.Views.BookCreatePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Cadastrar livro">

    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Titulo" />
            <Entry
                x:Name="Titulo"
                Margin="10"
                Placeholder="Informe o titulo do livro" />

            <Label Text="Autor" />
            <Entry x:Name="Autor" Margin="10" />

            <Label Text="ISBN" />
            <Entry x:Name="Isbn" Margin="10" />

            <Label Text="Categoria" />
            <Picker x:Name="Categoria" Margin="20" />

            <Label Text="Idioma" />
            <Entry x:Name="Idioma" Margin="10" />

            <Label Text="Editora" />
            <Entry x:Name="Editora" Margin="10" />

            <Label Text="Ano de lanÃ§amento" />
            <DatePicker x:Name="Anolancamento" />

            <Button
                x:Name="BtnCadastrar"
                Margin="50"
                Padding="20"
                Clicked="BtnCadastrar_Clicked"
                Text="Salvar" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

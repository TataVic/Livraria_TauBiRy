<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TauBiRy.Views.CategCreatePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="CategCreatePage">
    <ScrollView>
        <VerticalStackLayout>

            <Entry x:Name="TxtNomeCateg" Placeholder="Nome da categoria" />

            <Entry x:Name="TxtDescricao" Placeholder="Descrição" />
            <Button
                x:Name="BtnsalvarCateg"
                Clicked="BtnsalvarCateg_Clicked"
                Text="Salvar" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>